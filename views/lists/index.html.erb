<h1>Lists</h1>

<form action="/lists" method="post" class="mb-4" style="max-width: 500px">
  <div class="mb-3">
    <input name="list[name]" type="text" class="form-control" placeholder="Awesome list" aria-label="Name" required>
  </div>
  <div class="mb-3">
    <input name="list[description]" type="text" class="form-control" placeholder="Awesome list's description" aria-label="Descpiption">
  </div>
  <div class="d-flex align-items-center gap-3 mb-2">
    <small class="flex-grow-1 mb-2">You can specify attributes which items of the list would have</small>
    <button type="button" id="add_item_attribute" class="btn btn-primary" style="min-width: 10px">
      <span class="d-inline-block" style="width: 10px">+</span>
    </button>
  </div>
  <div id="item_attributes">

  </div>
  <div class="">
    <button type="submit" class="btn btn-primary">Create list</button>
  </div>
</form>

<% if @lists.empty? %>
  You haven't created any list yet.
<% else %>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-6 col-lg-4 col-xl-3 mb-3 mb-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= list[:name] %></h5>
            <p class="card-text"><%= list[:description] %></p>
            <a href="/lists/<%= list[:id] %>" class="card-link">Show</a>
            <a href="/lists/<%= list[:id] %>/edit" class="card-link">Edit</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
